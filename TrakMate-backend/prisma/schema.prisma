generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppUser {
  id           Int          @id(map: "User_pkey") @default(autoincrement())
  email        String       @unique(map: "User_email_key")
  password     String
  role         String       @default("Pilot")
  firstName    String       @map("firstName")
  lastName     String       @map("lastName")
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now()) @db.Timestamp(6)
  updatedAt    DateTime     @default(now()) @updatedAt @db.Timestamp(6)
  profileImage String?      @map("profileImage")
  times        TimeRecord[]

  @@map("app_user")
}

model Circuit {
  id           Int          @id @default(autoincrement())
  name         String
  km           Float
  country      String
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  circuitImage String?      @map("circuitImage")
  times        TimeRecord[]

  @@unique([name, country])
  @@index([country])
  @@map("Circuit")
}

model TimeRecord {
  id        Int      @id(map: "Time_pkey") @default(autoincrement())
  pilotId   Int      @map("pilotId")
  circuitId Int      @map("circuitId")
  createdAt DateTime @default(now()) @map("createdAt") @db.Timestamp(6)
  sector1Ms Int      @map("sector1Ms")
  sector2Ms Int      @map("sector2Ms")
  sector3Ms Int      @map("sector3Ms")
  circuit   Circuit  @relation(fields: [circuitId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_time_circuit")
  pilot     AppUser  @relation(fields: [pilotId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_time_user")

  @@map("time_records")
}

enum Role {
  Pilot
  Admin
}
